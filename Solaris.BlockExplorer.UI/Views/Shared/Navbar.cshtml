@using Solaris.BlockExplorer.UI.HtmlHelpers
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand ml-2 mr-2" href="~/">
        <div class="nav-brand-img"></div>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#top-navbar" aria-controls="top-navbar" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="top-navbar">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item @Url.IsLinkActive("Index", "Home")">
                <a class="nav-link" href="@Url.Action("Index", "Home")"><i class="fas fa-home text-warning"></i> Blocks</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><i class="fas fa-tachometer-alt text-warning"></i> Top 100</a>
            </li>
        </ul>
        <div class="mr-2 my-2 my-md-0">
            <ul class="navbar-nav">
                <li class="nav-item navbar-right">
                    <div class="form-inline">
                        <form method="get" action="@Url.Action("Index", "Search")">
                            <div class="form-group">
                                <div class="input-group">
                                    <input type="text" class="form-control" aria-describedby="search-addon" placeholder="Search" autocomplete="off" name="Query">
                                    <div class="input-group-append">
                                        <span class="input-group-text" id="search-addon"><i class="fa fa-search icons"></i></span>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </li>
            </ul>
        </div>
