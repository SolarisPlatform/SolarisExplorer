            <ul class="navbar-nav">
                <li class="nav-item navbar-right">
                    <table>
                        <tr>
                            <td><i class="fas fa-sun text-warning"></i></td>
                            <td>
                                <label class="switch mt-3">
                                    <input type="checkbox" data-bind="event: { change: setViewMode }, checked: viewModeChecked;" checked="checked">
                                    <span class="switch-slider round"></span>
                                </label>
                            </td>
                            <td><i class="fas fa-moon"></i></td>
